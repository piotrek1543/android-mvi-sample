<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">?colorPrimary</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="android:textViewStyle">@style/Widget.TodoApp.TextView</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorTertiary">@color/text_color_tertiary</item>
        <item name="android:textAppearanceListItemSecondary">
            @style/TextAppearance.TodoApp.ListSecondary
        </item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.LightNav" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.Onboarding" parent="AppTheme.LightNav">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Widget.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.TodoApp.ToolbarTitle</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
    </style>

    <style name="TextAppearance.TodoApp.Body" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.TodoApp.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="TextAppearance.TodoApp.SessionTitle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TodoApp.ListSecondary" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.TodoApp.ReservationStatus" parent="@style/TextAppearance.TodoApp.ListSecondary">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.TodoApp.Tag" parent="@style/TextAppearance.TodoApp.ListSecondary" />

    <style name="TextAppearance.TodoApp.AgendaTitle" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TodoApp.SessionTitle.Display" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.TodoApp.Tab" parent="@style/TextAppearance.MaterialComponents.Tab">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.TodoApp.H1" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.TodoApp.FadingSnackbarAction" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/teal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.TodoApp.Links" parent="@style/TextAppearance.TodoApp.Body">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorLink">?colorPrimary</item>
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="Widget.TodoApp" parent="@android:style/Widget" />

    <style name="Widget.TodoApp.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.TodoApp.Tab</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="Widget.TodoApp.TextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@style/TextAppearance.TodoApp.Body</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing</item>
    </style>

    <style name="Theme.TodoApp.Dialog" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/indigo</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textViewStyle">@style/Widget.TodoApp.TextView</item>
    </style>


</resources>
