<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.piotrek1543.example.todoapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TasksApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.piotrek1543.example.todoapp.view.tasks.TasksActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.piotrek1543.example.todoapp.view.addedittask.AddEditTaskActivity"
            android:exported="true" />
        <activity
            android:name="com.piotrek1543.example.todoapp.view.statistics.StatisticsActivity"
            android:exported="true" />
    </application>

</manifest>